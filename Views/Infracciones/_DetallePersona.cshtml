@model PersonaModel


<div class="row my-4 px-4">
    <div class="form-group col-md-6">
        <div class="controlForm">
            <label>Nombre:</label>&nbsp;@(Model.nombreCompleto != null ? Model.nombreCompleto : "-")

        </div>
    </div>
    <div class="form-group col-md-6">
        <div class="controlForm">
            <label>Tipo de persona:</label>&nbsp;@(Model.tipoPersona != null ? Model.tipoPersona : "-")
        </div>
    </div>
</div>

<div class="row my-4 px-4">
    <div class="form-group col-md-3">
        <div class="controlForm">
            <label>CURP:</label>
            <p>@(Model.CURP != null ? Model.CURP : "-")</p>
        </div>
    </div>
    <div class="form-group col-md-3">
        <div class="controlForm">
            <label>RFC:</label>
            <p>@(Model.RFC != null ? Model.RFC : "-")</p>
        </div>
    </div>
    <div class="form-group col-md-3">
        <div class="controlForm">
            <label>SEXO:</label>&nbsp;@(Model.genero != null ? Model.genero : "-")
        </div>
    </div>
    <div class="form-group col-md-3">
        <div class="controlForm">
            <label>Fecha nacimiento:</label>
            @if (Model.fechaNacimiento.HasValue)
            {
                <p>@Model.fechaNacimiento.Value.ToString("dd/MM/yyyy")</p>
            }
            else
            {
                <p>-</p>
            }

        </div>
    </div>
</div>

<div class="row my-4 px-4">
    <div class="form-group col-md-3">
        <div class="controlForm">
            <label>Municipio:</label>
            <p>@(Model.PersonaDireccion.municipio != null ? Model.PersonaDireccion.municipio : "-")</p>
        </div>
    </div>
    <div class="form-group col-md-3">
        <div class="controlForm">
            <label>Entidad:</label>
            <p>@(Model.PersonaDireccion.entidad != null ? Model.PersonaDireccion.entidad : "-")</p>
        </div>
    </div>
    <div class="form-group col-md-3">
        <div class="controlForm">
            <label>Calle:</label>
            <p>@(Model.PersonaDireccion.calle != null ? Model.PersonaDireccion.calle : "-")</p>
        </div>
    </div>
    <div class="form-group col-md-3">
        <div class="controlForm">
            <label>Número:</label>
            <p>@(Model.PersonaDireccion.numero != null ? Model.PersonaDireccion.numero : "-")</p>
        </div>
    </div>
</div>
<div class="row my-4 px-4">
    <div class="form-group col-md-4">
        <div class="controlForm">
            <label>Colonia:</label>
            <p>@(Model.PersonaDireccion.colonia != null ? Model.PersonaDireccion.colonia : "-")</p>
        </div>
    </div>
    <div class="form-group col-md-4">
        <div class="controlForm">
            <label>Teléfono:</label>
            <p>@(Model.PersonaDireccion.telefono != null ? Model.PersonaDireccion.telefono : "-")</p>
        </div>
    </div>
    <div class="form-group col-md-4">
        <div class="controlForm">
            <label>Correo:</label>
            <p>@(Model.PersonaDireccion.correo != null ? Model.PersonaDireccion.correo : "-")</p>
        </div>
    </div>
</div>
<div class="row my-4 px-4">
    <div class="form-group col-md-4">
        <div class="controlForm">
            <label>Tipo licencia:</label>
             <p>@(Model.tipoLicencia != null ? Model.tipoLicencia : "-")</p>

        </div>
    </div>
    <div class="form-group col-md-4">
        <div class="controlForm">
            <label>Licencia:</label>
            <p>@(Model.numeroLicencia != null ? Model.numeroLicencia : "-")</p>
        </div>
    </div>
    <div class="form-group col-md-4">
        <div class="controlForm">
            <label>Vigencia licencia:</label>
            <p>
                @(Model.vigenciaLicencia != DateTime.MinValue ? Model.vigenciaLicencia.ToShortDateString() : "-")
            </p>

        </div>
    </div>
</div>