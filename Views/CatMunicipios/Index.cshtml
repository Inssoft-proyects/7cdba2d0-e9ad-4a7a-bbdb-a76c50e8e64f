@model List<GuanajuatoAdminUsuarios.Models.CatMunicipiosModel>

<div class="mainContainer bg-light">
<section class="mx-md-3 mx-lg-4 mx-xl-5 bg-white boxShadow my-5 rounded">
                <div class="row align-items-center justify-content-between px-4 px-md-4 pt-3 pb-2">
                    <div class="col-12 col-md-6 col-lg-5 col-xl-auto">
                        <div class="row align-items-center justify-content-center justify-content-md-start">
                            <div class="col-auto">
                                <i class="icon-municipio h1 colorPrimary"></i>
                            </div>
                            <div class="col-auto my-3">
                                <h2 class="m-0 h3"><b>Catálogo de municipios</b></h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6 col-lg-7 col-xl-auto">
                        <div class="row">
                            <div class="col-auto btnOutline btnOutlinePrimary my-2 mx-auto mx-xl-2 p-0">
                                <button onclick="mostrarModalAgregarMunicipio()">
                                    <h6 class="m-0 d-flex align-items-center"><i class="icon-addMunicipio h5 mb-0 me-2"></i><b>Agregar nuevo municipio</b></h6>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="bg-light py-1"></div>
                    </div>
                </div>
                <div class="mt-5">
                    <nav class="tabCustom">
                        <div class="nav nav-tabs row mx-0" id="nav-tab" role="tablist">
                            <button class="nav-link active col" id="person-moral-tab" data-bs-toggle="tab" data-bs-target="#person-moral" type="button" role="tab" aria-controls="person-moral" aria-selected="true">
                                <div class="row justify-content-center align-items-center px-3 py-2">
                                    <div class="col-auto radioCustom p-0">
                                        <div class="rounded-circle m-2"></div>
                                    </div>
                                    <div class="col-auto p-0">
                                        <h5 class="m-0"><i class="icon-entidad h4"></i> <b>Todas las entidades</b></h5>
                                    </div>
                                </div>
                            </button>

                           
                        </div>
                    </nav>
                    <div class="tab-content" id="nav-tabContent">
                        <div class="tab-pane tabCustomConteiner fade show active" id="person-moral" role="tabpanel" aria-labelledby="person-moral-tab">
                            <div class="row justify-content-between mb-1 titleCustom">
                                <div class="col-12 col-md-auto mt-4 mb-2">
                                    <h5 class="px-4"><b>Listado de municipios</b></h5>
                                    <h6 class="px-4 text-muted">Edita o elimina los municipios.</h6>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 mb-4 px-4 rounded gridCustom">
                        <div id="tablaMunicipios">
                            <partial name="_ListaMunicipios" model="Model" />
                        </div>
                         </div>

                            </div>

                            <div class="row">
                                <div class="col-12">
                                    <div class="tabCustomEnd"></div>
                                </div>
                            </div>

                        </div>
        </div>
    </div>
    </section>
</div>

<div class="modal fade modalCustom" id="agregarMunicipio" tabindex="-1" aria-labelledby="agregarMunicipioLabel" aria-hidden="true">
     <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
                    <div class="modal-body" id="ModalBodyMunicipio">

                    </div>
        </div>
    </div>
</div>



<!-----------------------------------------------------------UPDATE--------------------------------------------------------------------------------------------->
 <div class="modal fade modalCustom" id="editarMunicipio" tabindex="-1" aria-labelledby="editarMunicipioLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-body" id="ModalBodyEditarMunicipio">

            </div>
        </div>
    </div>
</div>


<script>
    function mostrarModalAgregarMunicipio() {
        $.ajax({
            url: '@Url.Action("AgregarMunicipioModal")',
            type: 'POST',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            success: function (data) {
                $('#ModalBodyMunicipio').html(data);
                $('#agregarMunicipio').modal('show');
            }
        });
    }


</script>

