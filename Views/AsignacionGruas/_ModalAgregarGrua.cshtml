<script>
    function onFechaFinalChange() {
        var fechaFinal = $("#fechaFinalInsert").data("kendoDatePicker").value();
        var horaTerminoPicker = $("#horaTerminoInsert").data("kendoTimePicker");

        if (fechaFinal == null || fechaFinal === "") {
            horaTerminoPicker.max(null);
        } else {
            var fechaActual = new Date();

            var fechaFinalSoloFecha = new Date(fechaFinal.getFullYear(), fechaFinal.getMonth(), fechaFinal.getDate());
            var fechaActualSoloFecha = new Date(fechaActual.getFullYear(), fechaActual.getMonth(), fechaActual.getDate());

            if (fechaFinalSoloFecha.getTime() === fechaActualSoloFecha.getTime()) {
                horaTerminoPicker.max(fechaActual);
            } else {
                horaTerminoPicker.max(new Date(fechaFinal.getFullYear(), fechaFinal.getMonth(), fechaFinal.getDate(), 23, 59, 59));
            }
        }
    }
