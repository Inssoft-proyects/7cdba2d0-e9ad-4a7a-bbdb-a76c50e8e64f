<div class="mainContainer bg-light">
    <section class="mx-md-3 mx-lg-4 mx-xl-5 bg-white boxShadow my-5 rounded">
        <div class="row align-items-center justify-content-between px-4 px-md-4 pt-3 pb-2">
            <div class="col-12 col-md-6 col-lg-5 col-xl-auto">
                <div class="row align-items-center justify-content-center justify-content-md-start">
                    <div class="col-auto">
                        <i class="icon icon-grua h1 colorPrimary"></i>
                    </div>
                    <div class="col-auto my-3">
                        <h2 class="m-0 h3"><b>Padrón de grúas</b></h2>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-7 col-xl-auto">

                <div class="row">
                    <div class="col-auto btnOutline btnOutlinePrimary my-2 mx-auto mx-xl-2 p-0">
                        <button href="#" id="btnNuevaGrua" onclick="mostrarModal()">
                            <h6 class="m-0 d-flex align-items-center"><i class="icon icon-grua h5 mb-0 me-2"></i><b>Agregar nueva grúa</b></h6>
                        </button>

                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="bg-light py-1"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-auto mt-4 mb-2">
                <h5 class="px-4"><b>Búsqueda de Padrón</b></h5>
                <h6 class="px-4 text-muted">Realiza una búsqueda del padrón de grúas.</h6>
            </div>
        </div>
        <div class="row align-items-end px-4">
            <div class="controlForm my-3 col-12 col-md-6 col-lg-3">
                @(Html.Kendo().TextBox()
                    .Name("placas")
                    .Label(l => l.Content("Placas:"))
                    .Placeholder("Ingresa las placas válidas")
                    .HtmlAttributes(new { style = "width: 100%", id = "txtPlacas" }))
            </div>
            <div class="controlForm my-3 col-12 col-md-6 col-lg-3">
                @(Html.Kendo().TextBox()
                    .Name("noEconomico")
                    .Label(l => l.Content("No. Económico:"))
                    .Placeholder("Ingresa las placas válidas")
                    .HtmlAttributes(new { style = "width: 100%", id = "txtNoEconomico" }))
            </div>
            <div class="controlForm  my-3 col-12 col-md-6 col-lg-3">
                <label>Tipo Grúa:</label>
                @(Html.Kendo().DropDownList()
                    .Name("idTipoGruas")
                    .BindTo((SelectList)ViewBag.CatTipoGruas)
                    .OptionLabel("-- Seleccione --")
                    .Filter(FilterType.Contains)

                    .HtmlAttributes(new { style = "width:100%;", id = "ddlTipoGrua" })
                    .Filter(FilterType.Contains))
            </div>
             <div class="controlForm  my-3 col-12 col-md-6 col-lg-3">
                <label>Delegación:</label>
                @(Html.Kendo().DropDownList()
                    .Name("idDelegacion")
                    .BindTo((SelectList)ViewBag.CatDelegaciones)
                    .OptionLabel("-- Seleccione --")

                    .HtmlAttributes(new { style = "width:100%;", id = "ddlDelegaciones" })
                    .Filter(FilterType.Contains))
            </div>
            
            <div class="controlForm  my-3 col-12 col-md-6 col-lg-3">
                <label>Concesionario:</label>
                @(Html.Kendo().DropDownList()
                    .Name("idConcesionario")
                    .BindTo((SelectList)ViewBag.CatConcesionario)
                    .OptionLabel("-- Seleccione --")

                    .HtmlAttributes(new { style = "width:100%;", id = "ddlConcesionario" })
                    .Filter(FilterType.Contains))
            </div>


            <div class="col-12 my-3 col-md-6 col-lg-3">
                <div class="controlButton">
                    <button class="btnPrimary" type="button" onclick="submitSearch()">  <h5 class="m-0"><b>Buscar</b></h5></button>

                </div>
            </div>
        </div>
        <div class="row mb-2 mt-4">
            <div class="col-12">
                <h5 class="px-4"><b>Listado de Padrón de Grúas</b></h5>
                <h6 class="px-4 text-muted">Edita o ajusta el listado de grúas.</h6>
            </div>
        </div>
            
            <div id="listadoGruas">
                <partial name="_ListadoGruas" model="Model" />
            </div>
    </section>

</div>

<div class="modal fade modalCustom" id="addGrua" aria-labelledby="addGruaLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <div class="row align-items-center justify-content-between px-4 px-md-4 pt-3 pb-2">
                    <div class="col-auto pe-0">
                        <div class="row align-items-center justify-content-center justify-content-md-start">
                            <div class="col-auto pe-0">
                                <i class="icon icon-grua h1 colorPrimary"></i>
                            </div>
                            <div class="col-auto my-3">
                                <h2 class="m-0 h3"><b>Agregar grúa</b></h2>
                            </div>
                        </div>
                    </div>
                </div>
                @*<h4 class="modal-title">Agregar grúa</h4>*@
                <div class="col-auto">
                    <div class="row">
                        <div class="col-auto my-4">
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-body" id="ModalBodyCreate">
            </div>
        </div>

    </div>
</div>

<script>
    $(document).ready(function () {
        $("#addGrua").on("show.bs.modal shown.bs.modal", function (e) {
            $("body").removeClass("modal-open").find(".modal-backdrop").remove();
        });
        $("#addGrua").on('hide.bs.modal', function () {
            $('#ModalBodyCreate').html('');
        });
    });
    function mostrarModal() {
        $.ajax({
            url: '@Url.Action("ajax_create")',
            type: 'POST',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            success: function (data) {
                if (data.error) {
                    sitteg_warning("El usuario no tienen los permisos para esta acción");
                } else {
                $('#ModalBodyCreate').html(data);
                $('#addGrua').modal('show');
                }
            }
        });
    }

    function submitSearch() {
        var placas = $("#txtPlacas").val();
        var noEconomico = $("#txtNoEconomico").val();
        var idTipoGrua = $("#ddlTipoGrua").val();
        var idDelegacion = $("#ddlDelegaciones").val();
        var idConcesionario = $("#ddlConcesionario").val();
        showLoading();
        $.ajax({
            type: "GET",
            url: '@Url.Action("ajax_BuscarGruas")',
            data: {
                "placas": placas,
                "noEconomico": noEconomico,
                "idTipoGrua": idTipoGrua,
                "idDelegacion": idDelegacion,
                "idConcesionario": idConcesionario
            },
            success: function (data) {
                $("#listadoGruas").html(data);
                hideLoading();
            },
            error: function (xhr, status) {
                hideLoading();
            }
        });
    }

</script>




