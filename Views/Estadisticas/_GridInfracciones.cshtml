            </svg>
            Generar excel
        </button>
        @(
            Html.Kendo().Grid(Model)
            .Name("gridInfraccionesInfo")
            .Columns(columns =>
            {
                columns.Bound(c => c.NumeroSecuencial).Title("#").Width(150);
                columns.Bound(c => c.Folio).Title("Folio").Width(150);
                columns.Bound(c => c.FolioTxt).Title("Folio-Txt").Width(150);
                columns.Bound(c => c.TTOTTE).Title("TTO/TTE").Width(150);
                columns.Bound(c => c.Estatus).Title("Estatus").Width(150);
                columns.Bound(c => c.TipoCortesia).Title("Tipo Cortesía").Width(150);
                columns.Bound(c => c.Delegacion).Title("Delegación").Width(150);
                columns.Bound(c => c.Municipio).Title("Municipio").Width(150);
