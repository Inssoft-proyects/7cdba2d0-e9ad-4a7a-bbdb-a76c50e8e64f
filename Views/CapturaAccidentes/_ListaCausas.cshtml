<div class="col-12 mb-4 px-4 rounded gridCustom">
    @(
        Html.Kendo().Grid<GuanajuatoAdminUsuarios.Models.CapturaAccidentesModel>()
        .Name("gridCausa")
        .Columns(columns =>
        {
            columns.Bound(c => c.CausaAccidente).Title("Causa").Width(100);
            columns.Bound(c => c.IdCausaAccidente).Title("Orden").Width(30);
            columns.Template("<button data-bs-toggle=modal class='w-100 btn'onclick='editarCausa()'><h6 class='m-0 colorPrimary'><i class='h5 icon-edit me-2'></i><b>Editar</b></h6></button>").Width(80);
            columns.Template("<button data-bs-toggle=modal class='w-100 btn'><h6 class='m-0 colorDanger' onclick='eliminarCausa()'><i class='h5 icon-delete me-2'></i><b>Eliminar</b></h6></button>").Width(80);
            columns.Command(command => command.Custom("Arriba").Text("").Click("arriba")).Width(60);
            columns.Command(command => command.Custom("Abajo").Text("").Click("abajo")).Width(60);
        })
        .HtmlAttributes(new { style = "height:250px" })
        .Sortable()
        .Groupable()
        .Scrollable()
        .Pageable()
        .DataSource(dataSource => dataSource
        .Ajax()
        .Read(read => read.Action("AgregarCausaNuevo", "CapturaAccidentes"))
        .PageSize(5).Model(model => model.Id(p => p.IdCausaAccidente))
        )
        .Selectable(selectable => selectable.Mode(GridSelectionMode.Single)
        .Type(GridSelectionType.Row)
        )
        )
</div>

<script>
    function editarCausa() {
        $.ajax({
            url: '@Url.Action("ModalEditarCausaAccidente")',
            type: 'POST',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            success: function (data) {
                $('#ModalBodyEditarCausaAccidente').html(data);
                $('#editarCausaAccidenteModal').modal('show');
            }
        });
    }

    function eliminarCausa(e) {
        var dataItem = $(e).closest("tr").data("model");
        var IdAccidente = dataItem.IdCausaAccidente;
        $.ajax({
            url: '@Url.Action("ModalEditarCausas", "CapturaAccidentes")',
            type: 'POST',
            data: { IdAccidente: IdAccidente },
            success: function (result) {
                $('#ModalBodyEliminarClasificacion').html(result);
                $('#eliminarClasificacionModal').modal('show');
            }
        });
    }

    function arriba(e) {
        e.preventDefault();
        var grid = $("#gridCausa").data("kendoGrid");
        var selectedRow = $(e.target).closest("tr");
        var dataItem = grid.dataItem(selectedRow);
        var currentIndex = grid.dataSource.indexOf(dataItem);
        if (currentIndex > 0) {
            var previousItem = grid.dataSource.at(currentIndex - 1);
            grid.dataSource.remove(dataItem); // Remove the selected row
            grid.dataSource.insert(currentIndex - 1, dataItem); // Insert the selected row at the previous position
        }
    }

    function abajo(e) {
        e.preventDefault();
        var grid = $("#gridCausa").data("kendoGrid");
        var selectedRow = $(e.target).closest("tr");
        var dataItem = grid.dataItem(selectedRow);
        var currentIndex = grid.dataSource.indexOf(dataItem);
        if (currentIndex < grid.dataSource.total() - 1) {
            var nextItem = grid.dataSource.at(currentIndex + 1);
            grid.dataSource.remove(dataItem); // Remove the selected row
            grid.dataSource.insert(currentIndex + 1, dataItem); // Insert the selected row at the next position
        }
    }
</script>
