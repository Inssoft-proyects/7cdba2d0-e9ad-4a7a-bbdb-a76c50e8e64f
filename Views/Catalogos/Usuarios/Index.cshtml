
<h1>Administración de Usuarios</h1>

<p>
    <button id="btn" type="button" class="btn btn-primary" onclick="Agregar()">Agregar</button>
</p>

@{ var dvdTemplate = "#=Estatus ? 'Activo' : 'Inactivo' #";}


@(Html.Kendo().Grid<GuanajuatoAdminUsuarios.Models.Usuario>
    ()
    .Name("grid")
    .Columns(columns =>
    {
        columns.Bound(cm => cm.IdUsuario);
        columns.Bound(cm => cm.Nombre);
        columns.Bound(cm => cm.Paterno);
        columns.Bound(cm => cm.Materno);
        columns.Bound(cm => cm.Estatus).ClientTemplate(dvdTemplate).EditorTemplateName("Estatus");
        columns.Command(command =>
        {
            command.Custom("Editar").Click("EditValues").IconClass("k-icon k-i-pencil").Text(" ");
            command.Custom("Ver").Click("DetailValues").IconClass("k-icon k-i-preview").Text(" ");
        });

    })
    .DataSource(dataSource => dataSource
    .Ajax()
    .Read(read => read.Action("GetUsuarios", "CatUsuarios"))
    .Model(model => model.Id(cm => cm.IdUsuario))
    .PageSize(10)
    )
    .ColumnMenu()
    .Navigatable()
    .Resizable(r => r.Columns(true))
    .Reorderable(r => r.Columns(true))
    .Groupable(g => g.ShowFooter(false))
    .Pageable()
    .Editable(editable => editable.Mode(GridEditMode.PopUp))
    .Filterable()
    .Scrollable()
    .Sortable(sortable =>
    {
        sortable.SortMode(GridSortMode.MultipleColumn);
    })
    .Selectable(selectable => selectable
    .Mode(GridSelectionMode.Single))
)


<script>
    function Agregar() {
        var redirect = '/CatUsuarios/CreateUsuario/';
        window.location.href = redirect;
    }

    function EditValues(e) {
        e.preventDefault();
        var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
        console.log("dataItem usuario " + dataItem.IdUsuario);
        var redirect = '/CatUsuarios/EditUsuario/' + dataItem.IdUsuario;
        window.location.href = redirect;
    }

    function DetailValues(e) {
        e.preventDefault();
        var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
        console.log("dataItem " + dataItem.IdUsuario);

        var redirect = '/CatUsuarios/DetailsUsuario/' + dataItem.IdUsuario;
        window.location.href = redirect;
    }


</script >